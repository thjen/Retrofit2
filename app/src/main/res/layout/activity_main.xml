<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="qthjen_dev.io.retrofitdemo.View.MainActivity">

    <TextView
        android:id="@+id/tvTemp1"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:text="Hi there."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTemp2"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:textColor="#ffffff"
        android:text="Welcome to RetroFuck2"
        android:layout_below="@+id/tvTemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/email"
        android:layout_marginTop="150dp"
        android:paddingLeft="15dp"
        android:textColorHint="#ffffff"
        android:textColor="#FFFFFF"
        android:hint="Email"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tvTemp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/pass"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:textColorHint="#ffffff"
        android:textColor="#FFFFFF"
        android:hint="Password"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/signIn"
        android:textColor="#101010"
        android:textAllCaps="false"
        android:text="Login"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/signUp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="You don't an account? Sign up"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
